<% if(images.length == 1 ){ %>

  <div class="row d-flex justify-content-center align-self-center">
    <img src="<%= images[0] %>" class="img-fluid">
  </div>

<% } else{ %>
  <% if(images.length =S= 2 ){ %>
    <div class="row">
      <div class="col-xs-6 col-md-6"><img class="figure-img pull-right img-fluid" src="<%= images[0] %>"/></div>
      <div class="col-xs-6 col-md-6"><img class="figure-img pull-right img-fluid" src="<%= images[1] %>"/></div>
    </div>
  <% } %>
<% } %>
